package friendnum;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int sayi1 = 220;
		int sayi2 = 284;
		int bolen1 = 0;
		int bolen2 = 0;
		for (int i = 1; i < sayi1; i++) {
			if (sayi1 % i == 0) {
				bolen1 = bolen1 + i;
			}
		}
		for (int j = 1; j < sayi2; j++) {
			if (sayi2 % j == 0) {
				bolen2 = bolen2 + j;
			}

		}
		if ((bolen1 == sayi2) && (bolen2==sayi1)) {
			System.out.println(sayi1 + " ve " + sayi2 + " arkadaş sayıdır");
		} else {
			System.out.println(sayi1 + " ve " + sayi2 + " arkadaş sayı değildir");

		}
		int k=1000;
		int bolent=0;
		for(int t=1;t<k;t++) {
			for(int x=1;x<t;x++) {
			if(t%x==0) {
				bolent=bolent+x;
				System.out.println(t+". sayının bölenleri toplamı : "+bolent);
			}
			
		}
		System.out.println(bolent);
	}

}
}